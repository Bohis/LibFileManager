<UserControl x:Class="LibFileManager.View.ControlDataGridBooks"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:LibFileManager.View"
			 mc:Ignorable="d"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<Grid>
		<DataGrid x:Name="DataGridBooks"
				  GridLinesVisibility="All"
				  AutoGenerateColumns="False"
				  ItemsSource="{ Binding CollectionBook}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="id"
									Binding="{Binding Id}" />
				<DataGridTextColumn Header="Name"
									Binding="{Binding Name}" />
				<DataGridTextColumn Header="Tags"
									Binding="{Binding Tags}" />
				<DataGridTextColumn Header="Description"
									Binding="{Binding Id}" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>